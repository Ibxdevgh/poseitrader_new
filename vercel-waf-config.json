{
  "waf": {
    "managedRulesets": [
      {
        "name": "OWASP Core Rule Set",
        "enabled": true,
        "action": "block"
      },
      {
        "name": "Vercel Bot Protection",
        "enabled": true,
        "action": "block"
      },
      {
        "name": "Vercel Rate Limiting",
        "enabled": true,
        "action": "block"
      }
    ],
    "customRules": [
      {
        "name": "BLOCK ALL Googlebot Crawling",
        "description": "Completely block Googlebot to prevent any bandwidth usage",
        "action": "block",
        "conditions": [
          {
            "field": "user_agent",
            "operator": "matches_regex",
            "value": "(?i)(Googlebot|Googlebot-Image|Googlebot-News|Googlebot-Video|AdsBot-Google|AdsBot-Google-Mobile|Mediapartners-Google)"
          }
        ]
      },
      {
        "name": "Block Aggressive Crawlers",
        "description": "Block known aggressive crawlers",
        "action": "block",
        "conditions": [
          {
            "field": "user_agent",
            "operator": "matches_regex",
            "value": "(?i)(AhrefsBot|SemrushBot|DotBot|MJ12bot|Baiduspider|YandexBot)"
          }
        ]
      },
      {
        "name": "Limit Docs Folder Access",
        "description": "Rate limit access to docs folder to reduce bandwidth",
        "action": "challenge",
        "conditions": [
          {
            "field": "path",
            "operator": "starts_with",
            "value": "/docs/"
          },
          {
            "field": "rate_limit",
            "operator": "greater_than",
            "value": "50"
          }
        ],
        "rateLimit": {
          "requests": 50,
          "window": 3600
        }
      },
      {
        "name": "Block Suspicious User Agents",
        "description": "Block suspicious or fake user agents",
        "action": "block",
        "conditions": [
          {
            "field": "user_agent",
            "operator": "matches_regex",
            "value": "(?i)(curl|wget|python|scrapy|bot|crawler|spider|scraper)"
          },
          {
            "field": "user_agent",
            "operator": "does_not_contain",
            "value": "Googlebot"
          }
        ]
      },
      {
        "name": "Rate Limit by IP",
        "description": "Rate limit requests per IP address",
        "action": "challenge",
        "conditions": [
          {
            "field": "rate_limit",
            "operator": "greater_than",
            "value": "200"
          }
        ],
        "rateLimit": {
          "requests": 200,
          "window": 3600
        }
      }
    ]
  },
  "spendManagement": {
    "enabled": true,
    "budgetAlerts": [
      {
        "amount": 50,
        "currency": "USD",
        "notificationEmails": []
      },
      {
        "amount": 100,
        "currency": "USD",
        "notificationEmails": []
      },
      {
        "amount": 200,
        "currency": "USD",
        "notificationEmails": []
      }
    ],
    "hardLimit": {
      "amount": 500,
      "currency": "USD",
      "action": "pause_production"
    }
  }
}

